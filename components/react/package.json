{
  "name": "react-components",
  "version": "0.0.1",
  "description": "GOV.UK Styled React Components",
  "engines": {
    "node": ">=8"
  },
  "main": "commonjs/index.js",
  "module": "esm/index.js",
  "files": [
    "commonjs",
    "esm"
  ],
  "scripts": {
    "build": "npm run build-commonjs && npm run build-esm && npm run size",
    "build-commonjs": "BABEL_ENV=commonjs babel src --out-dir commonjs --ignore '**/stories','**/test' --source-maps inline",
    "build-esm": "BABEL_ENV=esm babel src --out-dir esm --ignore '**/stories','**/test' --source-maps inline",
    "build-storybook": "build-storybook -o docs",
    "size": "size-limit",
    "storybook": "start-storybook -s .storybook/public -p 6006",
    "prepublish": "npm run build",
    "prestorybook": "theme copy --destination .storybook/public/",
    "postbuild-storybook": "theme copy --destination docs/"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "styled-components": "^4.0.0",
    "theme": "^0.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@storybook/addon-a11y": "^4.0.0-alpha.25",
    "@storybook/addon-actions": "^4.0.0-rc.0",
    "@storybook/addon-info": "^4.0.0-alpha.25",
    "@storybook/addon-knobs": "^4.0.0-rc.0",
    "@storybook/addon-links": "^4.0.0-rc.0",
    "@storybook/addons": "^4.0.0-rc.0",
    "@storybook/react": "^4.0.0-rc.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-add-react-displayname": "^0.0.5",
    "babel-runtime": "^6.26.0",
    "size-limit": "^0.20.1",
    "storybook-readme": "^4.0.1",
    "storybook-styled-components": "^1.1.2",
    "tinycolor2": "^1.4.1"
  },
  "size-limit": [
    {
      "path": "commonjs/index.js",
      "limit": "100 KB"
    },
    {
      "path": "esm/index.js",
      "limit": "100 KB"
    }
  ]
}
